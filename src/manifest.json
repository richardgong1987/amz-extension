{
  "name": "auctions-yahoo",
  "version": "3.0.0",
  "description": "Build an Extension with Angular, auctions-yahoo for study",
  "icons": {
    "16": "assets/icon/favicon.png",
    "48": "assets/icon/favicon48.png",
    "128": "assets/icon/favicon128.png"
  },
  "manifest_version": 3,
  "action": {
    "default_icon": "assets/icon/favicon.png",
    "default_title": "auctions-yahoo",
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/AirHorn.mp3"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://login.yahoo.co.jp/*"
      ],
      "js": [
        "content_scripts_login.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "*://auctions.yahoo.co.jp/*",
        "*://*.auctions.yahoo.co.jp/*"
      ],
      "js": [
        "assets/jq.js",
        "content_scripts.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "webRequest",
    "storage",
    "scripting",
    "tabs"
  ]
}
