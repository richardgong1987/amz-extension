{
  "name": "amz-extension",
  "version": "3.0.0",
  "description": "",
  "icons": {
    "16": "assets/icon/favicon.png",
    "48": "assets/icon/favicon48.png",
    "128": "assets/icon/favicon128.png"
  },
  "manifest_version": 3,
  "action": {
    "default_icon": "assets/icon/favicon.png",
    "default_title": "mobadeko",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.amazon.co.jp/*"
      ],
      "js": [
        "assets/jq.js",
        "assets/socket.io.js",
        "content_scripts.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "background",
    "webRequest",
    "storage",
    "scripting",
    "tabs",
    "activeTab",
    "alarms",
    "downloads"
  ]
}
